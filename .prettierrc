{
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "overrides": [
      {
        "files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
        "options": {
          "useTabs": false
        }
      },
      {
        "files": ["*.md", "*.mdx"],
        "options": {
          "printWidth": 80
        }
      }
    ]
  }